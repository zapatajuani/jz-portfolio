---
import ExperienceCard from "./ExperienceCard.astro";

const {expData, title} = Astro.props
---

<section id="experience">
    <h1>{title}</h1>
    <br>
    <div>
        {
            Object.keys(expData).map((item:string)=>{
                return <ExperienceCard exp={expData[item]}/>
            })
        }
    </div>
</section>

<style>
    section {
        scroll-margin-top: 7rem;
        max-width: 90rem;
        height: auto;
        margin: 1rem;

    }
    
    div {
        border-left: 2px solid rgb(196, 223, 99);
        padding-bottom: 10px;
        padding-left: 2rem;
    }
    
    h1 {
        color: rgb(196, 223, 99);
        font-size: 4rem;
    }

    @media (width < 1000px) {
        section {
            margin-left: 20px;
            margin-right: 20px;
        }

        h1 {
            font-size: 3rem;
        }

        h2 {
            font-size: 2rem;
        }

        p {
            font-size: 1.6rem;
        }
    }
</style>
