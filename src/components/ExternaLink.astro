---
const { url } = Astro.props as { url:string }
---

<a href={url} target="_blank">
    <img src="/svg/link1.svg" alt="github" class="icon1">
    <img src="/svg/link2.svg" alt="github" class="icon2">
</a>

<style>
    a {
        width: 3.5rem;
        height: 3.5rem;

        margin-left: 1rem;
        padding: 0.5rem;

        border-radius: 50%;

        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;

        transition: background-color 0.5s ease;

        position: relative;
    }

    a:hover .icon1 {
        opacity: 0;
    }

    a:hover .icon2 {
        opacity: 1;
    }

    .icon1,
    .icon2 {
        width: 3.5rem;
        height: 3.5rem;
        position: absolute;
    }

    .icon1 {
        opacity: 1;
        transition: opacity 0.2s ease;
    }

    .icon2 {
        opacity: 0;
        transition: opacity 0.3s ease;
    }
</style>
